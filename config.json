{
    "name": "DepthFusion",
    "n_gpu": 2,

    "arch": {
        "type": "DepthRefinementNet",
        "args": {
        }
    },
    "data_loader": {
        "type": "MVSLoader",
        "args":{
            "data_path": "",
            "data_list": "lists/dtu/train.txt",
            "mode": "train",
            "num_srcs": 3,
            "num_depths": 192,
            "interval_scale": 1.0,
            "shuffle": true,
            "seq_size": 49,
            "batch_size": 1,
            "depth_scale": 1.0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "masked_prob_loss",
    "metrics": [
        "mae", "rmse"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 20,
        "seq": true,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "logging_every": 200,
        "monitor": "min val_rmse",
        "early_stop": 20,
        "tensorboard": false,
        "cfd_thresh": 1
    }
}

